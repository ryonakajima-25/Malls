#brand.brand
  %ul.brand__item
    %li ブランド名：#{brand.name}
    %li 業種：#{brand.category_large}／#{brand.category_small}
    %li 対象性別：#{brand.target_sex}
    %li 対象年齢：#{brand.target_age}
    %li 適正面積：#{brand.area_min}坪〜#{brand.area_max}坪
    投稿者：#{brand.tenant.company}
    = link_to tenant_path(brand.tenant_id) do
      = brand.tenant.name

  .brand__image
    - if brand.image.present?
      = image_tag brand.image.url

  .icon
    %i.fas.fa-heart 
    %p= brand.goods.count


  - if tenant_signed_in?
    %ul.btn
      %li= link_to '詳細', brand_path(brand.id)
      - if current_tenant.id == brand.tenant_id
        %li= link_to '編集', edit_brand_path(brand.id)
        %li= link_to '削除', brand_path(brand.id), method: :delete
  - elsif developer_signed_in?
    %ul.btn
      %li= link_to '詳細', brand_path(brand.id)