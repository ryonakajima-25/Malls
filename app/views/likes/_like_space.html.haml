#like__form
  - if space.like_user(current_user.id)
    = link_to space_like_path(space, space.like_user(current_user)), method: :delete, class: 'heart-icon' do
      = icon('fas', 'heart')
  - else
    = link_to space_likes_path(space), method: :post, class: 'empty-heart' do
      = icon('far', 'heart')
  %span #{space.likes.count}
