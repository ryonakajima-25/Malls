.account-page
  .account-page__form-title
    %h2 新規登録

  .account-page__form-box
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource

      .account-page__form-box__field
        = f.label :会社名
        %br/
        = f.text_field :company, autofocus: true, autocomplete: "company"

      .account-page__form-box__field
        = f.label :氏名
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name"

      .account-page__form-box__field
        = f.label :勤務地
        %br/
        = f.text_field :work_location, autofocus: true, autocomplete: "work_location"

      .account-page__form-box__field
        = f.label :電話番号
        %br/
        = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number"

      .account-page__form-box__field
        = f.label :メールアドレス
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"

      .account-page__form-box__field
        = f.label :パスワード
        - if @minimum_password_length
          %em
          （最小 #{@minimum_password_length} 文字入力）
        %br/
        = f.password_field :password, autocomplete: "new-password"

      .account-page__form-box__field
        = f.label :パスワード（確認用）
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"

      .account-page__form-box__actions
        = f.submit "登録"
    = render "devise/shared/links"
